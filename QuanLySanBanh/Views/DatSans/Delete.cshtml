@model QuanLySanBanh.Models.DatSan

@{
    String maTK = HttpContext.Current.Request.Cookies["MaTK"]?.Value;
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    .group-info {
        margin: 30px 0;
        display: flex;
        justify-content: space-between;
    }
</style>
<div style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <h3 style="color: red">Bạn có muốn hủy đặt sân này không?</h3>
    <div style="padding: 0 30px; border: 3px solid rgba(255, 255, 255, 0.1); width: 500px;">
        <div class="group-info">
            <h5>Tên sân: </h5>
            <div style="width: 211px">
                <h5 style="word-break:break-word">@ViewBag.tenSan</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Vị trí sân: </h5>
            <div style="width: 211px">
                <h5 style="word-break:break-word">@ViewBag.viTriSan</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Ngày đến sân: </h5>
            <div style="width: 211px">
                <h5 style="word-break:break-word">@Convert.ToDateTime(Model.NgayDenSan).ToString("dd/MM/yyyy")</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Giờ bắt đầu: </h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.GioBatDau:00</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Giờ kết thúc:</h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.GioKetThuc:00</h5>
            </div>
        </div>
        <div>
            @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color" style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                @Html.ActionLink("Quay lại lịch sử", "LichSu",new {maTK=maTK}, new { @class = "btn btn-outline-primary" })
                <input type="submit" value="Hủy Sân" class="btn btn-outline-danger" />
            </div>
            }
        </div>
    </div>
</div>