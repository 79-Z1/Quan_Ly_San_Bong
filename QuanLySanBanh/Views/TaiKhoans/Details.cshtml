@model QuanLySanBanh.Models.TaiKhoan

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    String Vip;
}

<style>
    .group-info {
        margin: 30px 0;
        display:flex;
        justify-content: space-between;
    }
</style>
<div style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <div style=" background-color: #ee1e46; padding: 16px 88px; color: #fff; width: 500px;">
        <h2>Thông tin tài khoản</h2>
    </div>
    <div style="padding: 0 30px; border: 3px solid rgba(255, 255, 255, 0.1); width: 500px;">
        <div class="group-info">
            <h5>Tên tài khoản:</h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.TenTK</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Email: </h5>
            <div style="width: 211px">
                <h5 style="word-break:break-word">@Model.Email</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Họ và tên: </h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.HoTen</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Số Điện thoại:  </h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.SDT</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Địa chỉ: </h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.DiaChi</h5>
            </div>
        </div>
        <div class="group-info">
            <h5 >Thành viên:</h5>
            <div style="width: 211px">
                @{
                if(Model.Vip == true)
                {
                    Vip = "Vip";
                }
                else
                {
                    Vip = "Thường";
                }
                }
                <h5 style="word-wrap:break-word">@Vip</h5>
            </div>
        </div>
        <div class="group-info">
            <h5>Điểm tích:</h5>
            <div style="width: 211px">
                <h5 style="word-wrap:break-word">@Model.DiemTich</h5>
            </div>
        </div>
        <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
            @Html.ActionLink("Đăng xuất", "Login", new {}, new { @class = "btn btn-outline-primary" } )
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaTK }, new{@class = "btn btn-outline-danger"})
        </div>
    </div>
</div>

